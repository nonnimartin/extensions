{
  "manifest_version": 2,

  "name": "Flex Salesforce Form Filler",
  "description": "Making Salesforce less inconvenient",
  "version": "1.1",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "https://*.my.salesforce.com/*/*"],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["jquery-3.1.1.min.js"],
    "persistent": false
  },

    "content_scripts": [ {
    "js": ["jquery-3.1.1.min.js"],
    "matches": [ "<all_urls>"]
  }]
}
